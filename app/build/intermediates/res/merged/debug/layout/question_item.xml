<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:paddingBottom="@dimen/padding_question_item"
    android:paddingTop="@dimen/padding_question_item"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/img_question"
        android:scaleType="fitXY"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_marginLeft="@dimen/question_title_mg_left"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_question_txt_size"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/black_text"
            android:gravity="center_vertical"
            android:id="@+id/text_question"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/short_text_question"
            android:textColor="@color/black_text"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/short_text_question_size"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>