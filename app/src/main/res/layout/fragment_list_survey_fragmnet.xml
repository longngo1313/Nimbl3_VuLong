<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.simple.com.nimbl3_vulong.fragments.ListSurveyFragment">


    <test.simple.com.nimbl3_vulong.customviews.VerticalViewPager
        android:id="@+id/survey_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />


    <LinearLayout
        android:id="@+id/indicator_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/indicator_mg_right"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/error_messenger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/there_are_some_problem_in_loading_data"
        android:textColor="@color/black_text"
        android:textSize="@dimen/error_txt_size"
        android:visibility="invisible" />

    <include layout="@layout/loading_data_screen" />

</RelativeLayout>
