<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical"
    tools:context="test.simple.com.nimbl3.fragments.DetailSurveyFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_text"
        android:textSize="@dimen/title_size_detail_survey"
        android:gravity="center_horizontal"
        android:text="@string/hello_blank_fragment"
        android:id="@+id/survey_data"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:paddingStart="@dimen/padding_list_question"
        android:paddingLeft="@dimen/padding_list_question"
        android:paddingRight="@dimen/padding_list_question"
        android:paddingEnd="@dimen/padding_list_question"
        android:layout_height="wrap_content"
        android:id="@+id/question_list_view"/>

</LinearLayout>
